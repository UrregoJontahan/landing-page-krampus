---
import"../styles/description.css"
import World from "./icons/World.astro"
import VsCodeSVG from "./icons/VsCodeSVG.astro"
import Group from "./icons/Group.astro"
import { getLangFromUrl, useTranslations } from "../i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section id="benefits" class="w-full py-20 description h-screen flex justify-center">
    <div class="container px-6">
        <h2 class="text-5xl font-bold text-center py-20 text-white title-benefits ">
            {t("title-benefits")} <br> {t("ourExtenesion")}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8"> 
            <div class="flex flex-col items-center px-16 py-10 shadow-lg rounded-lg my-8 container-benefits hover:shadow-xs
             hover:shadow-green-400/50 hover:scale-105 transition-transform duration-300">
                <World class="w-[200px] h-[200px] p-4 my-8"/>
                <h3 class="text-xl font-semibold mb-2 text-white text-center">{t("h3.target.colaboration")}</h3>
                <p class="text-white">
                    {t("text.target-colaboration")}
                </p>
            </div>
            <div class="flex flex-col items-center px-16 py-10 shadow-lg rounded-lg my-8 container-benefits hover:shadow-xs
             hover:shadow-green-400/50 hover:scale-105 transition-transform duration-300">
                <VsCodeSVG class="w-[180px] h-[180px] p-4 my-8"/>
                <h3 class="text-xl font-semibold mb-2 text-white text-center">{t("h3.integration-vscode")}</h3>
                <p class="text-white">
                   {t( "text.integration-vscode")}
                </p>
            </div>
            <div class="flex flex-col items-center px-16 py-10 shadow-lg rounded-lg my-8 container-benefits hover:shadow-xs
             hover:shadow-green-400/50 hover:scale-105 transition-transform duration-300">
                <Group class="w-[180px] h-[180px] p-4 my-8"/>
                <h3 class="text-xl font-semibold mb-2 text-white text-center">{t("h3.increase-productivity")}</h3>
                <p class="text-white">
                   {t( "text.increase-productivity")}
                </p>
            </div>
        </div>
    </div>
</section>